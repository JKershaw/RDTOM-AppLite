<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.rollerderbytestomatic.lite"
        versionCode="15" 
        version   = "0.3.1">

    <!-- versionCode is optional and Android only -->
    
	<preference name="android-minSdkVersion" value="7" />
	<preference name="android-targetSdkVersion" value="10" />
	
	<preference name="phonegap-version" value="2.1.0" />
	
	<preference name="orientation" value="default" />
	
	<!--  To allow older iOS device support, we don't use the latest PhoneGap version. 1.9.0 should do 3.X devices -->
	
	<preference name="show-splash-screen-spinner" value="true" />
	
    <name>RDTOM (Lite)</name>

    <description>
        The Roller Derby Test O'Matic free app. Random questions to help you learn the WFTDA rules of flat track roller derby.
    </description>

    <author href="http://rollerderbytestomatic.com/" email="contact@rollerderbytestomatic.com">
        John Kershaw
    </author>

    <!-- Icon information -->
    <icon src="icon.png" />
    
    <icon src="icon.png" gap:platform="ios" width="57" height="57" />
	<icon src="icon.png" gap:platform="ios" width="72" height="72" />
	<icon src="icon.png" gap:platform="ios" width="114" height="114" />

    <icon src="RDTOM_touch_icon.png" gap:platform="android" gap:density="ldpi" />
	<icon src="RDTOM_touch_icon.png" gap:platform="android" gap:density="mdpi" />
	<icon src="RDTOM_touch_icon.png" gap:platform="android" gap:density="hdpi" />
	<icon src="RDTOM_touch_icon.png" gap:platform="android" gap:density="xhdpi" />
    
	<gap:splash src="splash.png"/>
	<gap:splash src="splash_320_480.png" width="320" height="480" />
	<gap:splash src="splash_1024_768.png" width="1024" height="768" />
	<gap:splash src="splash_768_1024.png" width="768" height="1024" />

    <preference name="permissions" 
        	value="none"/>
    
    <preference name="android-installLocation" 
        	value="auto"/>
</widget>