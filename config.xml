<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.rollerderbytestomatic.lite"
        versionCode="23"
        version   = "0.4.6">

    <!-- versionCode is optional and Android only -->
    
	<preference name="android-minSdkVersion" value="7" />
	<preference name="android-targetSdkVersion" value="17" />
	
	<preference name="phonegap-version" value="3.7.0" />
	
	<preference name="orientation" value="default" />
	
	<preference name="show-splash-screen-spinner" value="true" />
	
    <name>RDTOM (Lite)</name>

    <description>
        The Roller Derby Test O'Matic free app. Random questions to help you learn the WFTDA rules of flat track roller derby.
    </description>

    <author href="http://rollerderbytestomatic.com/" email="contact@rollerderbytestomatic.com">
        John Kershaw
    </author>

    <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
    <gap:plugin name="org.li8.inappbrowser" version="0.1" />
    
    <access origin="https://play.google.com" browserOnly="true" />
    <access origin="itunes.apple.com" browserOnly="true" />
    
    <preference name="permissions" 
        	value="none"/>
    
    <preference name="android-installLocation" 
        	value="auto"/>
    

    <!-- Icon information -->
    <icon src="img/icon.png" />
    
    <icon src="img/icon-60.png" gap:platform="ios" width="60" height="60" /> 
    <icon src="img/icon-60@2x.png" gap:platform="ios" width="120" height="120" /> 
    <!-- iPad --> 
    <icon src="img/icon-76.png" gap:platform="ios" width="76" height="76" /> 
    <icon src="img/icon-76@2x.png" gap:platform="ios" width="152" height="152" /> 
    <!-- iPhone / iPod Touch --> 
    <icon src="img/icon.png" gap:platform="ios" width="57" height="57" /> 
    <icon src="img/icon@2x.png" gap:platform="ios" width="114" height="114" /> 
    <!-- iPad --> 
    <icon src="img/icon-72.png" gap:platform="ios" width="72" height="72" /> 
    <icon src="img/icon-72@2x.png" gap:platform="ios" width="144" height="144" />


    <icon src="img/RDTOM_touch_icon.png" gap:platform="android" gap:density="ldpi" />
	<icon src="img/RDTOM_touch_icon.png" gap:platform="android" gap:density="mdpi" />
	<icon src="img/RDTOM_touch_icon.png" gap:platform="android" gap:density="hdpi" />
	<icon src="img/RDTOM_touch_icon.png" gap:platform="android" gap:density="xhdpi" />

	<icon src="img/icon.png" gap:platform="blackberry" />
	
	<!--  Splash screens -->
	<gap:splash src="img/splash.png"/>
	<gap:splash src="img/splash_320_480.png" width="320" height="480" />
	<gap:splash src="img/splash_1024_768.png" width="1024" height="768" />
	<gap:splash src="img/splash_768_1024.png" width="768" height="1024" />
    <gap:splash src="img/splash-568h.png" gap:platform="ios" width="640" height="1136" />


</widget>